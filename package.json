{
  "name": "ffreitasb-portfolio",
  "version": "2.0.0",
  "description": "High-performance portfolio for Felipe Freitas",
  "main": "index-performance.html",
  "scripts": {
    "dev": "python -m http.server 3000",
    "build": "node optimize-assets.js",
    "test:performance": "node performance-test.js",
    "lighthouse": "lighthouse http://localhost:3000/index-performance.html --output=json --output-path=./lighthouse-report.json",
    "lighthouse:ci": "lhci autorun",
    "serve": "python -m http.server 8080",
    "deploy": "npm run build && npm run test:performance",
    "analyze": "npm run build && echo 'Check dist/optimization-report.md for analysis'",
    "clean": "rm -rf dist/ lighthouse-report.json",
    "perf:audit": "npm run lighthouse && node -e \"const report = require('./lighthouse-report.json'); console.log('Performance Score:', report.lhr.categories.performance.score * 100);\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ffreitasb/ffreitasb.github.io.git"
  },
  "keywords": [
    "portfolio",
    "performance",
    "data-science",
    "business-intelligence",
    "ai",
    "responsive",
    "pwa"
  ],
  "author": "Felipe Freitas <ffreitasb@pm.me>",
  "license": "MIT",
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "lighthouse": "^10.4.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "lighthouse-ci": {
    "ci": {
      "collect": {
        "url": [
          "http://localhost:8080/index-performance.html"
        ],
        "numberOfRuns": 3
      },
      "assert": {
        "assertions": {
          "categories:performance": ["error", {"minScore": 0.9}],
          "categories:accessibility": ["error", {"minScore": 0.9}],
          "categories:best-practices": ["error", {"minScore": 0.9}],
          "categories:seo": ["error", {"minScore": 0.9}]
        }
      }
    }
  },
  "performance-budget": {
    "minimumScore": 90,
    "thresholds": {
      "FCP": 1500,
      "LCP": 2500,
      "CLS": 0.1,
      "TTI": 3000
    }
  }
}